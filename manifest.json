{
    "manifest_version": 3,
    "name": "Omni",
    "version": "1.0.0",
    "description": "Omniâ€• the long waited multi-function browser extension that will automatically redirect you to your favorite creators special links, and will simultaneously protect those precious innocent eyes from seeing exclusive content.",
    "icons": {
      "48": "images/icon-48.png",
      "128": "images/icon-48.png"
    },
    "web_accessible_resources": [{ 
      "resources": ["/images/*.jpg", "/imagesFeet/*.jpg"],
      "matches": ["<all_urls>"]
    }],
    "declarative_net_request" : {
      "rule_resources" : [{
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }]
    },
    "permissions": [
      "declarativeNetRequest",
      "declarativeNetRequestFeedback",
      "tabs",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "*://*.throne.com/*",
      "*://allmylinks.com/*",
      "*://*.carrd.co/*",
      "*://beacons.ai/*",
      "*://linktr.ee/*",
      "*://*.pornhub.com/*",
      "*://*.youporn.com/*",
      "*://*.xvideos.com/*",
      "*://pmvhaven.com/*",
      "*://censored.booru.org/*"
    ],
    "content_scripts": [
       {
         "matches": ["<all_urls>"],
         "exclude_matches": [
            "https://throne.com/urlckd",
            "https://x.com/urlckd",
            "*://censored.booru.org/*",
            "*://*.pornhub.com/*"
        ],
         "js": ["content-script.js"],
         "run_at": "document_idle"
       },
       {
         "matches": ["<all_urls>"],
         "js": ["content.js"],
         "css": ["style.css"],
         "run_at": "document_idle"
       }
    ]
  }